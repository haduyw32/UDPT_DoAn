<html>
    <head>
        <meta charset="utf-8">
        <link href="css/default.css" rel="stylesheet" type="text/css">
        <title>Home</title>
        <script src="js/jquery-1.9.1.min.js"></script>
    
    <% if @wuser? : %> //save côkie
    <script type="text/javascript">
        var _id = "<%-@wuser %>";
        var pass = "<%-@wpass %>";
        var name = "<%-@wname %>";
        var arrFriend = [];//{_id, name}
        var fcus;
        function setCookie(cname, cvalue) {
            document.cookie = cname + "=" + cvalue + ";";
        }
        $(document).ready(function() {
            setCookie("c_id", _id);
            setCookie("cpass", pass);
            setCookie("cname", name);
            window.location.href="/";
        });
    </script>
    <% else : %>
        <script src="js/Cookie.js"></script>
    <% end %>
    
    <% include 'header.ect' %>
    </head>
    <body>
        <form name="func-form" class="header" action="\register" method="post" style="margin-top: 20px;">
            <div>
                <input type="submit" name="submit" value="Đăng kí tiêm" class="butFunc" style="margin-left: 38%"/>
                <br>
                <input type="submit" name="submit" value="Xem lịch sử đăng kí" class="butFunc" style="margin-left: 35%"/>
                
            </div>
        </form>
        <script type="text/javascript">
            var strhtml = "<input type=hidden name=user value=" +  getCookie("c_id") + " />";

            $("form div").html($("form div").html() + strhtml);
        </script>
    </body>
</html>

