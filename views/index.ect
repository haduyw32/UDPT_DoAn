<html>
    <head>
        <meta charset="utf-8">
        <link href="default.css" rel="stylesheet" type="text/css">
        <title>Home</title>
        <script src="jquery-1.9.1.min.js"></script>
    <script type="text/javascript">
        var _id = "<%-@wuser %>";
        var pass = "<%-@wpass %>";
        var name = "<%-@wname %>";
        var arrFriend = [];//{_id, name}
        var fcus;
    <% if @wuser? : %> //save côkie
        function setCookie(cname, cvalue) {
            document.cookie = cname + "=" + cvalue + ";";
        }
        $(document).ready(function() {
            setCookie("c_id", _id);
            setCookie("cpass", pass);
            setCookie("cname", name);
            window.location.href="/";
        });
    <% else : %> //check cookie
        function getCookie(cname) {
            var name = cname + "=";
            var ca = document.cookie.split(';');
            for(var i = 0; i <ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0)==' ') {
                    c = c.substring(1);
                }
                if (c.indexOf(name) == 0) {
                    return c.substring(name.length,c.length);
                }
            }
            return "";
        }

        function checkCookie() {
            email=getCookie("c_id");
            pass=getCookie("cpass");
            if (email!="" && pass!="") {
                return true;
            } else {
               return false;
            }
        }
        if (checkCookie() == false) {
            window.location.href="/login";
        }
    <% end %>
    </script>
    <% include 'header.ect' %>
    </head>
    <body>
        <form name="func-form" class="header" action="\" method="post" style="
    margin-top: 20px;">
            <div>
                <input align="middle" type="submit" name="submit" value="Đăng kí tiêm" class="butFunc"/>
                <br>
                <input type="submit" name="submit" value="Xem lịch sử đăng kí" class="butFunc" />
            </div>
        </form>
        
    </body>
</html>

